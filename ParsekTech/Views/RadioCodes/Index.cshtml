
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using X.PagedList.Mvc.Core
@model ModelsLayer.Models.RadioCodes.UnitCrudViewModel
<div class="fixed-action-btn">
    <a href="#AddEdit" class="btn-floating btn-large modal-trigger red" id="addButton">
        <i class="large material-icons">add</i>
    </a>
</div>

<div class="page-titles">
    <div class="d-flex align-items-center">
        <h5 class="font-medium m-b-0">Telsiz Kodları</h5>
        <div class="custom-breadcrumb ml-auto">
            <a href="/" class="breadcrumb">Anasayfa</a>
            <a href="/TBBilgisi" class="breadcrumb">Telsiz kodları</a>

        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col s2">
                            <div class="input-field">
                                <h5 class="card-title">Telsiz Kodları</h5>
                            </div>
                        </div>
                        <div class="col s2">
                        </div>
                        <div class="col s2">
                        </div>
                        <div class="col s6">
                            <div class="row">
                                <div class="col s2">
                                </div>
                                <div class="col s3">
                                  
                                </div>

                                <div class="col s3 ">
                                  
                                </div>
                                <div class="col s4">
                                    @await Component.InvokeAsync("Search")

                                </div>

                            </div>
                        </div>
                    </div>
                    <p></p>

                    <div class="table-responsive">
                        <table id="sunucuTable">
                        </table>
                        <table>
                            <thead>
                                <tr>
                                    <th>Birim</th>
                                    <th>Telsiz kod Aralık</th>
                                 


                                    <th style="text-align: center; width: 20px;"></th>
                                    <th style="text-align: center; width: 20px;"></th>
                                    <th style="text-align: center; width: 20px;"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Units)
                                {
                                 
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.FirstValue - @item.LastValue</td>


                                        <td>
                                            <a href="/Bureau?unitId=@item.Id" class="waves-effect waves-light btn-small blue  modal-trigger">
                                                <i class="material-icons">person</i>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/RadioCodes?editId=@item.Id" class="waves-effect waves-light btn-small green">
                                                <i class="material-icons">edit</i>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/RadioCodes/Delete/@item.Id" class="waves-effect waves-light btn-small delete" style="background-color: #E06B55">
                                                <i class="material-icons">delete</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model.Units, page => Url.Action("Index", new { page, ViewBag.SearchFor }), new X.PagedList.Web.Common.PagedListRenderOptions
                        {
                        DisplayLinkToIndividualPages = true,
                        DisplayItemSliceAndTotal = false,
                        DisplayPageCountAndCurrentLocation = false,
                        MaximumPageNumbersToDisplay = 10,
                        LiElementClasses = new[] { "page-item" },
                        PageClasses = new[] { "page-link" }
                        })

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div id="AddEdit" class="modal modal-fixed-footer" data-keyboard="false" data-backdrop="static">
    <form asp-action="AddEdit" id="Add_Form">
        <div class="modal-content">
            <input hidden id="Id" length="120" asp-for="@Model.Unit.Id" name="Id">

            <div class="row">
                <div class="input-field col s12">
                    <input id="Sicil" length="120" asp-for="@Model.Unit.Name" name="Name">
                    <label for="Sicil">İsim</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="Ad" type="text" asp-for="@Model.Unit.FirstValue" name="FirstValue">
                    <label for="Ad">İlk</label>
                </div>
                <div class="input-field col s6">
                    <input id="Birim" type="text" asp-for="@Model.Unit.LastValue" name="LastValue">
                    <label for="Birim">Son</label>
                </div>
            </div>

       
            <div asp-validation-summary="ModelOnly">
            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn green waves-effect waves-green">
                Gönder
            </button>
            <a href="#!" class="modal-action modal-close waves-effect waves-green btn red ">Kapat</a>
        </div>
    </form>

</div>

@section Scripts {

    <script>


        function toggleBody(header) {
            var body = header.nextElementSibling;
            body.style.display = body.style.display === 'none' ? 'block' : 'none';
        }



    </script>
}